<!DOCTYPE html>
<html lang="en">

    <head>
    
        <%- include ('./partials/head') %>
      
    
        <link href="/css/normalize.css" rel="stylesheet">
        
        <link href="/css/home.css" rel="stylesheet">
        
        <link href="/css/header.css" rel="stylesheet">
        <link href="/css/footer.css" rel="stylesheet">
        
        <title >Dicons | Compra Online</title> 
        
    
     </head>       

        <body>
   
            <!-- Contenido del Header -->
            <%- include ('./partials/header') %>
           
    <main>
    <!-- Contenido del Slide con Bootstrap -->
    
      

        <div class="container-main">
            <div class="container-producto">
                <p class="titulo">Las mejores promociones</p>
                <!-- Show the "visited" products -->
                <% for(let p of Allproductos) { %> 
                    <% if(p.discount > 0){ %>
                    <div class="card-producto-hidden">
                        <section id="card-producto" class="card-producto">
                            <a href="/products/detail/<%= p.id %>">
                                <img id="imagen-producto" src="/img/products/<%= p.image %>" alt="imagen de producto">
                            </a>
                            <article class="detalle-producto">
                                <i id="icon-cart" class="fa-solid fa-cart-shopping"></i>
                                <h3 id="precio-producto" class="precio-producto">$<%= p.price %></h3>
                                <p id="descuento-producto" class="descuento-producto"><%= p.discount %>% OFF</p>
                                <p id="nombre-producto" class="nombre-producto"><%= p.name %></p>
                                <p id="producto-id" style="display: none;"><%= p.id %></p>
                            </article>
                        </section>
                    </div>
                    <% } %> 
                <% } %> 
                
            </div>
        </div>

       
        
    </main>
      
    <!-- footer -->
	<%- include ('./partials/footer') %>
	<!-- /footer -->
    
   
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/2c086df42b.js" crossorigin="anonymous"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/carrito-home.js" type="text/javascript"></script>
    </body>


</html>
