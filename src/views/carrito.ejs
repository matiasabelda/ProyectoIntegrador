<!DOCTYPE html>
<html lang="en">

  <head>

    <%- include ('./partials/head') %>
      <link href="/css/normalize.css" rel="stylesheet">
      <link href="/css/carrito.css" rel="stylesheet" >
    
      <link href="/css/header.css" rel="stylesheet">
      <link href="/css/footer.css" rel="stylesheet">
      
      <title > Carrito Dicons</title> 
        </head>

<body>
    
  <!-- header -->
  <%- include ('./partials/header') %>
  <!-- /header -->

  <section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card">
            <div class="card-body p-4">
  
                <div class="row">

                    <div id="leftContainer" class="col-lg-7">
                        
                        <div id="nameContainer" class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <p class="mb-1">¡Hola <%= user.name %>!</p>
                                <p id="counter" class="mb-0"></p>
                            </div>
                            <div>
                                <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!"
                                    class="text-body">price <i class="fas fa-angle-down mt-1"></i></a></p>
                            </div>
                        </div>
                        <!-- Products Container -->
                        <div id="item-container">
                        </div>
                        <!-- End Products Container -->
                        

                        

                        
                        <hr class="my-1 mt-2">
                        <div class="d-flex justify-content-between mt-0">
                          <h5 class="mb-3"><a href="/" class="text-body" style="text-decoration: none;"><i
                          class="fas fa-long-arrow-alt-left me-2"></i>Seguí comprando</a></h5>
                          <a href="/products/carrito"><button id="vaciar-carrito" type="button" class="btn btn-dark align-self-end">Vaciar carrito</button></a>
                        </div>
                    </div>

                    <div class="col-lg-5">

                        <div class="card bg-black text-white rounded-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="mb-0">RESUMEN</h5>
                                    <img src="/img/users/<%= user.avatar %>"
                                    class="img-fluid rounded-3" style="width: 45px;" alt="Avatar">
                                </div>

                                <hr class="my-4">
            
                                <div class="d-flex justify-content-between">
                                    <p class="mb-2">Productos</p>
                                    <p id="counter2" class="mb-2"></p>
                                </div>
            
                                <div class="d-flex justify-content-between mb-4">
                                    <p class="mb-2">Total a pagar</p>
                                    <p id="itemSumaTotal" class="mb-2"></p>
                                </div>
            
                                <button id="btn-compra" type="button" class="btn btn-info btn-block btn-lg">
                                    <div class="d-flex justify-content-between">
                                    <span id="itemSumaTotalAzul"></span>
                                    <span>PAGAR <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                    </div>
                                </button>
            
                            </div>
                        </div>

                    </div>
  
                </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<!-- footer -->
<%- include ('./partials/footer') %>
<!-- /footer -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/carrito.js" type="text/javascript"></script>
<script src="/js/carrito-home.js" type="text/javascript"></script>
<!-- <script src="/js/btn-quantity.js" type="text/javascript"></script> -->
</body>